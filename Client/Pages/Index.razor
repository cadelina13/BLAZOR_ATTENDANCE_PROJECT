@page "/"
@code {
    List<ChangeLog> changelist = new();
    protected override async Task OnInitializedAsync()
    {
        WebHeader.TITLE = "Attendance System";
        await InvokeAsync(StateHasChanged);
        changelist = new List<ChangeLog>()
        {

            new ChangeLog
            {
                Description = "Subject's time schedule in the SMS notification.",
                Date = "04-05-22"
            },
            new ChangeLog
            {
                Description = "Minor bugs fixed.",
                Date = "04-04-22"
            },
            new ChangeLog
            {
                Description = "Implemented the sending of SMS automatically.",
                Date = "04-04-22"
            },
            new ChangeLog
            {
                Description = "Add subject time.",
                Date = "04-03-22"
            }
        };

    }
}

<MudText Typo="Typo.h4">Change log</MudText>

<MudTimeline TimelinePosition="TimelinePosition.Start" DisableModifiers>
    @foreach (var i in changelist)
    {
        <MudTimelineItem Color="Color.Info">
            <MudText Typo="Typo.button">@i.Description</MudText>
            <MudText Typo="Typo.body2" Class="mud-text-secondary">@i.Date</MudText>
        </MudTimelineItem>
    }
</MudTimeline>



